<section class="new-session">
  <h1 class="label">Login</h1>

  <%= form_for :session, url: sessions_path do |f| %>

    <h4><%= f.label :email %></h4>
    <h4><%= f.email_field :email %></h4>

    <h4><%= f.label :password %></h4>
    <h4><%= f.password_field :password %></h4>

    <h4><%= f.submit 'Login' %></h4>

  <% end %>
</section>
