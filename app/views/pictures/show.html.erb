<section class="show">
  <%= render 'single_picture', picture: @picture %>

  <% if current_user == @picture.user %>
    <div class="links">
      <%= link_to('Edit Picture', edit_picture_path) %> |

      <%= link_to('Delete', picture_path(@picture), method: :delete, data: {confirm: "Are you sure you want to delete this picture?"})  %>
    </div>
  <% end %>

  <div class="comments" id="comments_section">
    <h1 class="label">Comments:</h1>
    <ul>
      <li>
        <% @picture.comments.each do |comment| %>
          <%= comment.name %>:
          <%= comment.message %>

          <span>
            <%= link_to('Edit Comment', edit_picture_comment_path(@picture, comment)) %> |

            <%= link_to('Delete', picture_comment_path(@picture, comment), method: :delete, data: {confirm: "Are you sure you want to delete this comment?"})  %>
          </span>
        <% end %>
      </li>
    </ul>

    <div class="comments_form">
      <%= render 'comments_form', picture: @picture %>
    </div>
</div>
</section>
